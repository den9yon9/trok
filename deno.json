{
  "name": "@trok/trok",
  "version": "0.1.32",
  "license": "MIT",
  "exports": {
    ".": "./lib/cli.ts",
    "./server": "./lib/server.tsx",
    "./builder": "./lib/Builder.ts"
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.9",
    "@std/path": "jsr:@std/path@^1.0.8",
    "esbuild": "npm:esbuild@^0.24.2",
    "preact": "npm:preact@10.25.4",
    "preact-render-to-string": "npm:preact-render-to-string@^6.5.12"
  },

  "tasks": {
    "test:server": "deno serve --watch -A --host 127.0.0.1 lib/server.tsx",
    "test:build": "deno -A lib/cli.ts --notify https://api.sleeplessplanet.com,https://github.com/asdf/80asdf",
    "buildUI": "rm -rf ./ui/dist && esbuild ui/src/routes/main.tsx --external:preact --bundle --format=esm --outfile=ui/dist/main.js.txt"
  },

  "fmt": {
    "lineWidth": 80,
    "indentWidth": 2
  }
}
